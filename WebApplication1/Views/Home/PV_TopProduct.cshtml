@model WebApplication1.Models.ViewModel.ProductDetailsVM
@using PagedList.Mvc




@if (Model.TopProducts != null && Model.TopProducts.Any())
{
    <section class="container-fluid listProduct">
        <h4>Sản phẩm bán chạy</h4>
        <ul class="list-container">
            @foreach (var product in Model.TopProducts)
            {
                <li class="lproduct-item">
                    <div>
                        <a href="@Url.Action("ProductDetail", "Home", new {id = product.ProductID})">
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" />
                        </a>
                    </div>
                    <div>
                        <p>@Html.DisplayFor(modelItem => product.ProductName)</p>
                        <p>@Html.DisplayFor(modelItem => product.ProductPrice)</p>
                    </div>
                </li>
            }
        </ul>
    </section>
}

<div class="pagination-container">
    @Html.PagedListPager(Model.TopProducts, page => Url.Action("ProductDetails", new
{
   id = Model.product.ProductID,
        quantity = Model.quantity,
        page
}))
</div>