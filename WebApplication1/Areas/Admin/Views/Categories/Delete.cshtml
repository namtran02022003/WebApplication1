@model WebApplication1.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Xóa danh mục</h2>

<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4 class="bg-danger">Bạn thực sự muốn xóa danh mục này?</h4>
            <div class="form-group">
                <div class="control-label col-md-2">Tên danh mục:</div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </div>
            </div>
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>

    }
</div>
