@model IEnumerable<WebApplication1.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>DANH SÁCH DANH MỤC CÁC SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", null , new {@class = "btn btn-primary"})
</p>
<table class="table table-info p-5 overflow-hidden rounded-4">
    <tr>
        <th class="bg-success col-lg-8 col-md-4 col-sm-2">
          TÊN DANH MỤC
        </th>
        <th class="bg-success col-lg-8 col-md-4 col-sm-2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
